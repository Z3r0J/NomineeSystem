@model IEnumerable<NominaProject.Models.Deduction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeductionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apply)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeductionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apply)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDeduction">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDeduction">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDeduction">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
