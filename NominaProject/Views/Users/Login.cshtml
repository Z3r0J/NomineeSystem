@model Users; 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="login-form">
    @using (Html.BeginForm("Login", "Users",FormMethod.Post, new { @class = "border border-light shadow" }))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <form action="#"method="post">
            <div class="form-name">
                <span>Login</span>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.UserName, new { @class = "form-control item", placeholder = "UserName" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control item", type = "Password", placeholder = "Password" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-block login-account" placeholder="Enter">
            </div>

        </form>
    }
    <div class="social-media border border-light shadow">
        <h5>Login With</h5>
        <div class="social-icons">
            <a href="#"><i class="fa-brands fa-facebook"></i></a>
            <a href="#"><i class="fa-brands fa-google"></i></a>
            <a href="#"><i class="fa-brands fa-twitter"></i></a>
        </div>
    </div>
    }
</div>
