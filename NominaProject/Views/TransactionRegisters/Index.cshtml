@model IEnumerable<NominaProject.Models.TransactionRegister>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDeductionOrIncome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTypeTransaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDeductionOrIncome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTypeTransaction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTransaction">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransaction">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransaction">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
